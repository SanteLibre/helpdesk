<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_action_quotations_new" model="ir.actions.act_window">
        <field name="name">Quotation</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">form,tree,graph</field>
        <field name="domain">[('ticket_id', '=', active_id)]</field>
        <field name="context">{'search_default_ticket_id': active_id, 'default_ticket_id': active_id}</field>
    </record>

    <record id="sale_action_quotations" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="domain">[('ticket_id', '=', active_id)]</field>
        <field name="context">{'search_default_ticket_id': [active_id], 'default_ticket_id': active_id}</field>
    </record>

    <record id="sale_action_orders" model="ir.actions.act_window">
        <field name="name">Sale orders</field>
        <field name="res_model">sale.order</field>
        <field name="domain">[('ticket_id', '=', active_id), ('state', 'not in', ('draft', 'sent', 'cancel'))]</field>
        <field name="context">{'search_default_ticket_id': [active_id], 'default_ticket_id': active_id}</field>
    </record>

    <record id="sale_view_ticket_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='technical']" position="inside">
                <field name="ticket_id" help="Log in the chatter from which ticket the order originates"
                       groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

    <!-- This menu is display in Helpdesk app when sale is installed-->
    <menuitem id="helpdesk_menu_sales" name="Sales"
              parent="helpdesk_mgmt.helpdesk_ticket_main_menu" sequence="12"/>

    <menuitem
            id="sale_order_menu_quotations_helpdesk"
            name="My Quotations"
            action="sale.action_quotations"
            parent="helpdesk_menu_sales"
            sequence="2"/>

</odoo>
