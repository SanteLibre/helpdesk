<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="mass_mailing_schedule_date_view_form" model="ir.ui.view">
        <field name="name">helpdesk.mass.mailing.view.form</field>
        <field name="model">helpdesk.mass.mailing.wizard</field>
        <field name="arch" type="xml">
            <form string="Select a mailing list to add email.">
                <group>
                    <group>
                        <field name="number_of_contact" attrs="{'invisible': [('number_of_contact', '&lt;', 2)]}"/>
                        <field name="name" readonly="1" attrs="{'invisible': [('number_of_contact', '&gt;', 1)]}"/>
                        <field name="email" readonly="1" attrs="{'invisible': [('number_of_contact', '&gt;', 1)]}"/>
                        <field name="mass_mailing_list" required="1" widget="many2many_tags"/>
                        <field name="cache_mml" invisible="1"/>
                        <!--                        <field name="mass_mailing_list_default" invisible="1"/>-->
                    </group>
                </group>
                <footer>
                    <button string="Apply" name="set_mailing_list" type="object" class="btn-primary"/>
                    <button string="Cancel " class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- wizard action on res.partner -->
    <act_window id="helpdesk_wizard_action"
                name="Add to mailing list"
                src_model="helpdesk.ticket"
                res_model="helpdesk.mass.mailing.wizard"
                view_type="form" view_mode="form"
                key2="client_action_multi" target="new"
                groups="mass_mailing.group_mass_mailing_user"/>

</odoo>
